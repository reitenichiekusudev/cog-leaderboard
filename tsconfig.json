{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
    },
    "include": ["src/**/*"],
}